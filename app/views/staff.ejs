<!DOCTYPE html>
<html>

<%- include('partial/head', {title: "Staff"}) %>

    <body>

        <div class="wrapper">
            <!-- Sidebar Holder -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Staff Dashboard</h3>
                </div>

                <ul class="list-unstyled components">
                    <li class="active">
                        <a href="/staff">Home</a>
                    </li>
                    <li>
                        <a href="#sessionTabs" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Sessions</a>
                        <ul class="collapse list-unstyled" id="sessionTabs">
                            <% sessionList.forEach(function(session) { %>
                                <li>
                                    <a href="/staff/<%=user.email%>/<%=session.sessionName%>">
                                        <%= session.sessionName %>
                                    </a>

                                </li>
                                <% }); %>
                        </ul>
                    </li>
                    <li>
                        <a href="https://www.ntu.edu.sg/Pages/home.aspx" target="_blank">About NTU</a>
                    </li>
                    <li>
                        <a href="https://www.ntu.edu.sg/FacultyStaff/Pages/StaffServices.aspx" target="_blank">Contact</a>
                    </li>
                </ul>

                <ul class="list-unstyled CTAs mt-3">
                    <li>
                        <a href="/logout" class="button">Log out</a>
                    </li>
                </ul>
            </nav>

            <!-- Page Content Holder -->
            <div id="content">

                <nav class="navbar navbar-expand-lg navbar-light bg-light dashboard-navbar">
                    <div class="container-fluid">

                        <button type="button" id="sidebarCollapse" class="dashboard-navbar-btn">
                        <i class="fas fa-expand" style="color:black"></i>
                    </button>

                    </div>
                </nav>

                <!-- carousel-->
                <div id="slide_adminHome" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://www.ntu.edu.sg/PublishingImages/new/sliders/uni_rank.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.ntu.edu.sg/PublishingImages/new/sliders/NTU%20Rankings%20Compilation.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="https://www.ntu.edu.sg/PublishingImages/new/sliders/NTU-Volvo%20autonomous%20bus.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>

                    <a class="carousel-control-prev" href="#slide_adminHome" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#slide_adminHome" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="mt-3">
                    <h3>Welcome,
                        <%= user.displayName %>!</h3>
                </div>
            </div>

        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                $('#sidebarCollapse').on('click', function() {
                    $('#sidebar').toggleClass('active');
                    $(this).toggleClass('active');
                });
            });
        </script>
    </body>

</html>